#include <stdlib.h>
#include <string.h>
#include <stdio.h>
#include "lists.h"

/**
 * main - Programme de test pour list_len uniquement
 *
 * Return: Toujours 0 (succes)
 */
int main(void)
{
	list_t *head;
	list_t *node1, *node2, *node3;
	size_t n;

	/* Creation de 3 noeuds */
	node1 = malloc(sizeof(list_t));
	node2 = malloc(sizeof(list_t));
	node3 = malloc(sizeof(list_t));

	if (!node1 || !node2 || !node3)
		return (1);

	/* Liaison des noeuds */
	node1->str = strdup("First");
	node1->len = 5;
	node1->next = node2;

	node2->str = strdup("Second");
	node2->len = 6;
	node2->next = node3;

	node3->str = strdup("Third");
	node3->len = 5;
	node3->next = NULL;

	head = node1;

	/* Test : Liste avec 3 elements */
	n = list_len(head);
	printf("Nombre d'elements: %lu\n", n);

	/* Liberation memoire */
	free(node1->str);
	free(node2->str);
	free(node3->str);
	free(node1);
	free(node2);
	free(node3);

	return (0);
}
